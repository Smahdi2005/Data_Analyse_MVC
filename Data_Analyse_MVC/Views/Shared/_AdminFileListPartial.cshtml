@model IEnumerable<Data_Analyse_MVC.Models.UploadFile>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col" class="border-0">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-file me-2 text-primary"></i>
                            نام فایل
                        </div>
                    </th>
                    <th scope="col" class="border-0">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar-alt me-2 text-primary"></i>
                            تاریخ آپلود
                        </div>
                    </th>
                    <th scope="col" class="border-0">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-chart-line me-2 text-primary"></i>
                            وضعیت تحلیل
                        </div>
                    </th>
                    <th scope="col" class="border-0 text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-file-alt text-muted me-2"></i>
                                <div>
                                    <h6 class="mb-0">@file.OriginalFileName</h6>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="small text-muted">
                                <i class="fas fa-clock me-1"></i>
                                @file.CreatedAtUtc.ToLocalTime().ToString("yyyy/MM/dd HH:mm")
                            </div>
                        </td>
                        <td>
                            @if (file.AnalyseResults != null && file.AnalyseResults.Any())
                            {
                                <span class="badge bg-success-subtle text-success">
                                    <i class="fas fa-check-circle me-1"></i>
                                    تحلیل شده
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning-subtle text-warning">
                                    <i class="fas fa-clock me-1"></i>
                                    تحلیل نشده
                                </span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                @if (file.AnalyseResults != null && file.AnalyseResults.Any())
                                {
                                    <button type="button" 
                                            onclick="showAdminAnalyseResult('@file.AnalyseResults.Last().Id')"
                                            class="btn btn-outline-primary btn-sm"
                                            data-bs-toggle="tooltip"
                                            title="نمایش نتایج تحلیل">
                                        <i class="fas fa-chart-bar"></i>
                                    </button>
                                }
                                <a href="@Url.Action("Download", "Upload", new { id = file.Id })"
                                   class="btn btn-outline-info btn-sm"
                                   data-bs-toggle="tooltip"
                                   title="دانلود فایل">
                                    <i class="fas fa-download"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Admin", new { id = file.Id })"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('آیا از حذف این فایل اطمینان دارید؟')"
                                   data-bs-toggle="tooltip"
                                   title="حذف فایل">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        // فعال‌سازی تولتیپ‌ها
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
else
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-folder-open fa-3x mb-3"></i>
        <p>هیچ فایلی یافت نشد</p>
    </div>
}
